<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-4">Ready to transform your school management?</h2>
                <p class="lead mb-5">Join thousands of schools that have streamlined their operations with EdinTern.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a class="btn btn-light btn-lg px-4 me-sm-3" asp-area="Identity" asp-page="/Account/Register">
                        <i class="fas fa-rocket me-2"></i>Start Free Trial
                    </a>
                    <a class="btn btn-outline-light btn-lg px-4" href="#">
                        <i class="fas fa-play-circle me-2"></i>Request Demo
                    </a>
