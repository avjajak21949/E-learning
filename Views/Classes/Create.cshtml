@model Demo03.Models.Class

@{
    ViewData["Title"] = "Create Class";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm my-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Create New Class</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CourseID" class="form-label"></label>
                            <select asp-for="CourseID" class="form-select" asp-items="ViewBag.CourseID"></select>
                            <span asp-validation-for="CourseID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TeacherId" class="form-label">Teacher</label>
                            <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId"></select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ScheduleInfo" class="form-label"></label>
                            <input asp-for="ScheduleInfo" class="form-control" />
                            <span asp-validation-for="ScheduleInfo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxCapacity" class="form-label"></label>
                            <input asp-for="MaxCapacity" class="form-control" />
                            <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
