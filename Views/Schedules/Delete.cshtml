@model Demo03.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h1>Delete Schedule</h1>

<h3>Are you sure you want to delete this schedule?</h3>
<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Class
        </dt>
        <dd class="col-sm-10">
            @Model.Class.Name
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Class.Course.Name
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Days of Week
        </dt>
        <dd class="col-sm-10">
            @Model.DaysOfWeek
        </dd>
        <dt class="col-sm-2">
            Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ScheduleID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 